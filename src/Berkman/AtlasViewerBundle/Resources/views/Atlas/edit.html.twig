<h1>Atlas edit</h1>

<form action="{{ path('atlas_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_row(edit_form.name) }}
    {{ form_row(edit_form.description) }}
    {{ form_row(edit_form.url) }}
    {{ form_row(edit_form.default_epsg_code) }}
    {% for page in edit_form.pages %}
        {{ form_row(page) }}
    {% endfor %}
    {{ form_rest(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('atlas') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('atlas_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
