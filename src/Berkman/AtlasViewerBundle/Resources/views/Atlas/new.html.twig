{% extends 'BerkmanAtlasViewerBundle::layout.html.twig' %}

{% block body %}
<h1>Atlas creation</h1>

<form action="{{ path('atlas_create') }}" method="post" {{ form_enctype(form) }}>
    {{ form_widget(form) }}
    <p>
        <button type="submit">Create</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('atlas') }}">
            Back to the list
        </a>
    </li>
</ul>
{% endblock body %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts 'bundles/berkmanatlasviewer/js/atlas_new.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
